<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/learRow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/stt"
                    android:layout_width="35dp"
                    android:layout_height="35sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/black"/>

                <ImageView

                    android:id="@+id/bai_dang_chon"
                    android:layout_width="25dp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10sp"
                    android:gravity="center"
                    android:src="@drawable/equalizer"
                    android:visibility="gone" />

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ten_bai_bat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:text="Tên bài hát"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/time_song"
                android:layout_width="50sp"
                android:layout_height="20sp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:text="3:24"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <ImageView
            android:scaleType="centerInside"
            android:id="@+id/img_popup_menu"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_menu_moreoverflow_large_normal" />

    </LinearLayout>

</LinearLayout>